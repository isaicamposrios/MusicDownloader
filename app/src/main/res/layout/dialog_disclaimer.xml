            android:layout_height="wrap_content"
            android:id="@+id/checkbox"/>
        <TextView
            android:id="@+id/neveragain"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
