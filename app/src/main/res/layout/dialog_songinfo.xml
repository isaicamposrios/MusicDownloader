            android:id="@+id/button_addplaylist"
            android:text="Aggiungi a pl."
            android:textColor="@android:color/black"
            style="?android:attr/buttonBarButtonStyle" />-->
        <net.ddns.paolo7297.musicdownloader.ui.DisablingImageButton
            android:id="@+id/button_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:elevation="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_playlist_play_white_48dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <net.ddns.paolo7297.musicdownloader.ui.DisablingImageButton
            android:id="@+id/button_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:elevation="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_file_download_white_48dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <net.ddns.paolo7297.musicdownloader.ui.DisablingImageButton
            android:id="@+id/button_addplaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:elevation="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_playlist_add_white_48dp" />

    </LinearLayout>

</LinearLayout>